# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Signaling Server (for WebRTC 1:1 calls)
NEXT_PUBLIC_SIGNALING_SERVER_URL=https://your-signaling-server.com

# =============================================================================
# Video Provider Configuration
# =============================================================================

# Provider selection per call type (optional - defaults shown)
NEXT_PUBLIC_VIDEO_PROVIDER_1ON1=webrtc    # Options: webrtc
NEXT_PUBLIC_VIDEO_PROVIDER_MEETUP=livekit  # Options: livekit, agora
NEXT_PUBLIC_VIDEO_PROVIDER_GROUP=agora     # Options: agora, livekit

# Agora Configuration (for connection groups)
NEXT_PUBLIC_AGORA_APP_ID=your-agora-app-id

# LiveKit Configuration (for admin meetups)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-app.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# =============================================================================
# AI Configuration (for recap summaries)
# =============================================================================

# Option 1: OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Option 2: Anthropic Claude (alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# =============================================================================
# Feature Flags
# =============================================================================

NEXT_PUBLIC_ENABLE_TRANSCRIPTION=true   # Enable speech-to-text (LiveKit only)
NEXT_PUBLIC_ENABLE_AI_RECAP=true        # Enable AI-generated call summaries
NEXT_PUBLIC_ENABLE_METRICS=true         # Enable call quality metrics collection
